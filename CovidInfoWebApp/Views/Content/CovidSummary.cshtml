@model CovidInfoWebApp.Models.CovidSummary

@{
    ViewData["Title"] = "CovidSummary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Covid Summary</h4>
@Html.DropDownList("slug", (List<SelectListItem>)ViewBag.AllCountries, "--Select Country--", new { onchange = "document.location.href = '/Content/CovidSummary?slug=' + this.options[this.selectedIndex].value;" })

@if (Model != null)
{
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Country)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CountryCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CountryCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Slug)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Slug)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NewConfirmed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NewConfirmed)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalConfirmed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalConfirmed)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NewDeaths)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NewDeaths)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalDeaths)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalDeaths)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NewRecovered)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NewRecovered)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalRecovered)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalRecovered)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>
</div>
}
